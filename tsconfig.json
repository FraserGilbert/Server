{
  "compilerOptions": {
    "types": ["bun-types", "jest"],

    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    "allowJs": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,

    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**"
  ]
}